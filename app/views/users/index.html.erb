<h1 class="admin_header">Users</h1>

<% @users.each do |user| %>
	<div class="index_item page_index_item">
		<div class="controls">
			<%= link_to 'Edit', edit_user_path(user) if permitted_to? :edit, :users %>
			<%= link_to 'Delete', user_path(user), :method => :delete, :confirm => 'Are you sure?' if permitted_to? :delete, :users %>
		</div>
		<%= display_permitted_to_link(:edit, :users, user.name, edit_user_path(user)) %>
	</div>
<% end %>

<div class="button new_button">
	<%= link_to 'New User', new_user_path %>
</div>
