<%= form_for(@background_image, form_action_path(@background_image, @institution), :html => {:multipart => true}) do |f| %>
	<%= f.hidden_field :institution_id, :value => @institution.id %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= image_tag @background_image.image.url(:preview) %>
	</div>
  <div class="field">
    <%= f.label :file %><br />
    <%= f.file_field :image %>
  </div>
	<div class="button confirm_button">
  	<%= f.submit %>
	</div>
<% end %>