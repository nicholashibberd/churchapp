<%= form_for(@photo, form_action_path(@photo, @institution), :html => {:multipart => true}) do |f| %>
	<%= f.hidden_field :institution_id, :value => @institution.id %>
  <div class="field">
    <%= f.label :caption %><br />
    <%= f.text_field :caption %>
  </div>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
	
	<% unless @photo.new_record? %>
		<div class="field">
			<%= image_tag @photo.photo.url(:thumb) %>
		</div>
  <% end %>

	<div class="field">
    <%= f.label :file %><br />
    <%= f.file_field :photo %>
  </div>
	<div class="button confirm_button">
  	<%= f.submit %>
	</div>
<% end %>
