<%= form_for(message, form_path(message)) do |f| %>
	<%= form_hidden_field(f, @church) %>
	<%= hidden_field_tag :page_id, @page.id if @page %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  <div class="button confirm_button">
    <%= f.submit %>
  </div>
<% end %>
