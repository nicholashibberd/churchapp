<% content_for :head do -%>
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
	<%#= javascript_include_tag 'jquery_maps' %>
	<%= javascript_include_tag 'gmap.min' %>

	<script type="text/javascript">
	$(function(){	
			$("#map").gMap(<%= widget.map_to_json.html_safe %>);
		});
	</script>
<% end -%>

<div id="<%= widget.css_id %>" class="map_widget widget">
	<div id="map"></div>
</div>