<!DOCTYPE html>
<html>
<head>
  <title><%= @site.name %> Admin</title>
  <%= stylesheet_link_tag 'sanderstead', 'admin' %>
  <%= javascript_include_tag "jquery-1.7.1.min.js", 'jquery-ui-full', "rails", "application", "nested_form" %>
  <%= csrf_meta_tag %>
	<%= yield :head %>
</head>
<body>
	<div id="background">
		<div id="background_header">
		</div>
		<div id="background_content">
		</div>
	</div>
	<div id='admin_wrapper'>
		<div id="user_status">
			<%= link_to 'View site', root_path %> | 
			<%= link_to "#{current_user.name}: Sign out", signout_path, :id => 'signout_link' if current_user %>
		</div>
		<div id="admin_header">
			<div id="admin_logo">
				<%= link_to @site.name, church_admin_path %> <span class="admin_logo_yellow">Admin</span>
			</div>
			<%= render 'admin/parish_nav' if current_user %>
		</div>
		<div id="content_wrapper">
			<%= render 'layouts/flash', :flash => flash %>			
			<div id="<%= request[:controller] %>_<%= request[:action] %>_content" class="admin_content">
				<%= yield %>
			</div>
			<div class="spacer"></div>
		</div>
	</div>
</body>
</html>
