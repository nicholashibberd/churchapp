<div class="article">
	<div class="article_title">
		<%= date_icon(@article.date).html_safe %>
		<h2><%= link_to @article.title, single_article_path(@institution, @article) %></h2>
	</div>
	<div class="article_content">
		<%= @article.content.html_safe %>
	</div>
	<div class="article_details">
		<div class="article_author">
			By <%= @article.person.name %> on <%= l @article.date, :format => :long %>
		</div>
		<%= display_article_comments(@article) do %>
			<%= pluralize(@article.comments.count, 'comment', 'comments') %>
		<% end %>
	</div>
		
</div>
<%= render 'comments/form', {:comment => @article.comments.new, :article => @article} %>