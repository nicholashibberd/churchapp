<h1>Articles index page</h1>

<% @church.articles.desc(:date).limit(10).each do |article| %>
	<div class="index_item page_index_item">
		<div class="controls">
			<%= link_to 'View', article_path(@church, article) %>
		  <%= link_to 'Edit', edit_article_path(@church, article) %>
		  <%= link_to 'Delete', article_path(@church, article), :confirm => 'Are you sure?', :method => :delete %>
		</div>
		<%= link_to article.title, edit_article_path(@church, article) %>
		<div class='article_categories'>
			<%= article.display_categories %> | <%= l article.date, :format => :long %>
		</div>
	</div>
<% end %>

<div class="button new_button">
	<%= link_to 'New Article', new_article_path(@church) %>
</div>
